<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dip"
    android:paddingBottom="7dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    >
    <ImageView
        android:id="@+id/serchar_bar_back_button"
        android:layout_height="22dip"
        android:layout_width="12dip"
        android:src="@drawable/back"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    />
    <TextView
        android:id="@+id/search_bar_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:gravity="center"
        android:textColor="#4994ec"
        android:textSize="@dimen/font_size_medium"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
     />
     <EditText
        android:id="@+id/search_bar_search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="12dip"
        android:hint="@string/plase_input_search_keyword"
        android:textColor="@color/gray_677272"
        android:textSize="@dimen/font_size_medium"
        android:singleLine="true"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_centerVertical="true"
        android:cursorVisible="true"
        android:imeOptions="actionSearch"
        android:layout_toRightOf="@id/serchar_bar_back_button"
        android:layout_toLeftOf="@id/search_bar_search_button"
     />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="13dip"
    android:paddingBottom="13dip"
    android:paddingLeft="12dip"
    android:paddingRight="12dip"
    >
    <ImageView
        android:id="@+id/serchar_bar_back_button"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:src="@drawable/back"
        android:scaleType="centerInside"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
    />
    <TextView
        android:id="@+id/search_bar_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:gravity="center"
        android:textColor="#4994ec"
        android:textSize="@dimen/font_size_large"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
     />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="39dip"
         android:orientation="horizontal"
         android:background="@drawable/shurukuang"
         android:layout_toRightOf="@id/serchar_bar_back_button"
         android:layout_toLeftOf="@id/search_bar_search_button"
         android:paddingTop="6dip"
         android:paddingBottom="6dip"
         android:layout_marginLeft="14dip"
         android:layout_marginRight="14dip"
         android:gravity="center_vertical"
      >
       <ImageView
           android:layout_width="18dip"
           android:layout_height="18dip"
           android:scaleType="centerInside"
           android:src="@drawable/search"
           android:layout_marginLeft="16dip"
           android:layout_marginRight="13dip"
        />
         <EditText
             android:id="@+id/search_bar_search_box"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@null"
             android:hint="@string/plase_input_search_keyword"
             android:textColor="@color/gray_677272"
             android:textSize="@dimen/font_size_normal"
             android:singleLine="true"
             android:cursorVisible="true"
             android:imeOptions="actionSearch"
             android:layout_marginRight="16dip"
             />
     </LinearLayout>
</RelativeLayout>
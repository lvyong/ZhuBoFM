<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dip"
    >
   <CheckBox
       android:id="@+id/message_comment_checkbox"
       android:layout_width="35dip"
       android:layout_height="35dip"
       android:button="@drawable/checkbox_drawable"
       android:layout_alignParentLeft="true"
       android:checked="false"
       android:layout_centerVertical="true"
       android:layout_marginRight="12dip"
       android:visibility="gone"
    />
   <view
       android:id="@+id/message_comment_list_item_img"
       android:layout_width="45dip"
       android:layout_height="45dip"
       android:scaleType="centerCrop"
       class="com.zhubo.control.activity.common.ItotemImageView"
       android:layout_toRightOf="@id/message_comment_checkbox"
       android:src="@drawable/default_img"
    />

    <ImageView
        android:id="@+id/message_comment_list_item_arrow_img"
        android:layout_width="9dip"
        android:layout_height="13.5dip"
        android:src="@drawable/gray_right_arrow"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dip"
     />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/message_comment_list_item_img"
        android:layout_toLeftOf="@id/message_comment_list_item_arrow_img"
        android:layout_alignTop="@id/message_comment_list_item_img"
        android:layout_marginLeft="12dip"
    >
        <TextView
            android:id="@+id/message_comment_list_item_listener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/message_comment_list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#D0D0D0"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:layout_alignTop="@id/message_comment_list_item_listener"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/message_comment_list_item_message_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#797979"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""
            android:layout_below="@id/message_comment_list_item_listener"
            android:layout_alignLeft="@id/message_comment_list_item_listener"
            android:layout_marginTop="3dip"
            />
    </RelativeLayout>
</RelativeLayout>
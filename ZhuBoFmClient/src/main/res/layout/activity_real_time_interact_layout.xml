<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/activity_realtime_interact_viewpager"
        android:layout_height="62dip"
        android:layout_width="match_parent"
        android:fadingEdge="none"
        android:layout_gravity="center"
     />
    <view
        xmlns:ptr="http://schemas.android.com/apk/res/com.zhubo.fm"
        android:id="@+id/activity_realtime_interact_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class = "com.andy.ui.libray.pullrefreshview.PullToRefreshListView"
        android:listSelector="@color/transparent_background"
        android:fadingEdge="none"
        android:scrollbars="none"
        ptr:ptrMode="both"
        />
</LinearLayout>
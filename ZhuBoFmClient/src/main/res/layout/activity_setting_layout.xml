<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/ui_white_bg_gray_border"
            android:layout_marginTop="10dip"
            android:baselineAligned="false"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_normal"
                    android:text="@string/people_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/activity_setting_user_arrow_img"
                    android:layout_width="9dip"
                    android:layout_height="18.5dip"
                    android:src="@drawable/gray_right_arrow"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <view
                    android:id="@+id/settings_photo_img"
                    android:layout_height="63dip"
                    android:layout_width="63dip"
                    class="com.zhubo.control.activity.common.ItotemImageView"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_launcher"
                    android:layout_toLeftOf="@id/activity_setting_user_arrow_img"
                    android:layout_marginRight="15dip"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#dddddd"
                />
            <RelativeLayout
                android:id="@+id/activity_settings_qianming_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_normal"
                    android:text="@string/qianming"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:id="@+id/activity_setting_user_qianming_arrow_img"
                    android:layout_width="9dip"
                    android:layout_height="18.5dip"
                    android:src="@drawable/gray_right_arrow"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/settings_qianming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="@dimen/font_size_small"
                    android:text=""
                    android:singleLine="false"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:maxEms="13"
                    android:layout_toLeftOf="@id/activity_setting_user_qianming_arrow_img"
                    android:layout_marginRight="15dip"
                    />
            </RelativeLayout>
        </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dip"
        android:background="@drawable/ui_white_bg_gray_border"
        >
          <RelativeLayout
              android:id="@+id/settings_change_password_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:padding="12dip"
              >
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="#222222"
                  android:singleLine="true"
                  android:textSize="@dimen/font_size_normal"
                  android:text="@string/change_password"
                  android:layout_alignParentLeft="true"
                  />
              <ImageView
                  android:layout_width="9dip"
                  android:layout_height="18.5dip"
                  android:src="@drawable/gray_right_arrow"
                  android:scaleType="centerInside"
                  android:layout_alignParentRight="true"
                  />
          </RelativeLayout>
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dip"
            android:background="@drawable/ui_white_bg_gray_border"
            >
            <RelativeLayout
                android:id="@+id/settings_update_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_normal"
                    android:text="@string/check_update"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:id="@+id/settings_update_right_arrow"
                    android:layout_width="9dip"
                    android:layout_height="18.5dip"
                    android:src="@drawable/gray_right_arrow"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                  <Button
                     android:id="@+id/activity_settings_layout_new_button"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@drawable/update_flag"
                     android:text="new"
                     android:textSize="@dimen/font_size_small"
                     android:textColor="@color/white"
                     android:layout_toLeftOf="@id/settings_update_right_arrow"
                     android:layout_marginRight="15dip"
                   />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#dddddd"
                />
            <RelativeLayout
                android:id="@+id/about_us_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="12dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_normal"
                    android:text="@string/about_us"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="9dip"
                    android:layout_height="18.5dip"
                    android:src="@drawable/gray_right_arrow"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#dddddd"
                />
            <RelativeLayout
                android:id="@+id/suggest_feedback_layout"
                android:layout_width="match_parent"
                android:layout_height="47dip"
                android:gravity="center_vertical"
                android:padding="12dip"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#222222"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_normal"
                    android:text="@string/suggest_feedback"
                    android:layout_alignParentLeft="true"
                    />
                <ImageView
                    android:layout_width="9dip"
                    android:layout_height="18.5dip"
                    android:src="@drawable/gray_right_arrow"
                    android:scaleType="centerInside"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/activity_settings_unlogin_button"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@drawable/round_buttong_bg"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:textSize="@dimen/font_size_medium"
            android:textColor="#999999"
            android:text="@string/unlogin"
            android:layout_marginTop="50dip"
         />
    </LinearLayout>
</ScrollView>
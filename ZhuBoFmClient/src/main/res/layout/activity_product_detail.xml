<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/ui_white_bg_gray_border"
        android:paddingTop="13dip"
        android:paddingBottom="13dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        >
        <ImageView
            android:id="@+id/product_detail_img"
            android:layout_width="20dip"
            android:layout_height="23dip"
            android:src="@drawable/gift"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
         />
         <TextView
             android:id="@+id/product_detail_name_textview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#444444"
             android:textSize="@dimen/font_size_medium"
             android:singleLine="true"
             android:ellipsize="end"
             android:layout_toRightOf="@id/product_detail_img"
             android:layout_marginLeft="7dip"
             android:layout_alignBaseline="@id/product_detail_img"
             android:text="摇滚音乐死了"
             android:gravity="center"
             android:paddingTop="3dip"
         />
         <TextView
             android:id="@+id/product_detail_price_textview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#828282"
             android:textSize="@dimen/font_size_small"
             android:singleLine="true"
             android:ellipsize="end"
             android:layout_centerHorizontal="true"
             android:layout_alignBaseline="@id/product_detail_name_textview"
             android:text="￥520"
             android:gravity="center"
             android:paddingLeft="23dip"
          />
          <TextView
              android:id="@+id/product_detail_date_textview"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#828282"
              android:textSize="@dimen/font_size_small"
              android:singleLine="true"
              android:ellipsize="end"
              android:layout_alignParentLeft="true"
              android:layout_below="@id/product_detail_img"
              android:layout_marginTop="13dip"
              android:text="2014.6.5-2014.9.5"
           />
           <TextView
               android:id="@+id/product_detail_sale_textview"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#fe0000"
               android:textSize="@dimen/font_size_large"
               android:singleLine="true"
               android:ellipsize="end"
               android:layout_alignParentRight="true"
               android:layout_alignBaseline="@id/product_detail_date_textview"
               android:text="99999"
            />
           <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#77abf4"
            android:textSize="@dimen/font_size_normal"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/product_detail_sale_textview"
            android:layout_toRightOf="@id/product_detail_date_textview"
            android:layout_alignBaseline="@id/product_detail_date_textview"
            android:text="30天销量"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ui_white_bg_gray_border"
        android:layout_marginTop="11dip"
        android:orientation="vertical"
    >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:paddingTop="15dip"
           android:paddingBottom="15dip"
        >
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textColor="#828282"
               android:textSize="@dimen/font_size_normal"
               android:text="@string/program"
               android:gravity="center"
            />
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textColor="#828282"
               android:textSize="@dimen/font_size_normal"
               android:text="@string/time"
               android:gravity="center"
               />
           <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:textColor="#828282"
               android:textSize="@dimen/font_size_normal"
               android:text="@string/sale"
               android:gravity="center"
               />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#cdcdcd"
         />
         <ListView
             android:id="@+id/product_detail_listview"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:fadingEdge="none"
             android:listSelector="@color/transparent_background"
             android:scrollbars="none"
             android:divider="@drawable/dash_line"
             android:dividerHeight="1.5dip"
             android:layout_marginLeft="11dip"
             android:layout_marginRight="11dip"
          />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/mssage_detail_top_layout"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:layout_alignParentBottom="true"
      android:background="@drawable/message_edit_beijing"
      android:paddingLeft="15dip"
      android:paddingRight="15dip"
      android:paddingTop="10dip"
      android:paddingBottom="10dip"
    >
      <Button
          android:id="@+id/messsage_detail_send_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="发送"
          android:textColor="@color/gray_bcbbb9"
          android:textSize="@dimen/font_size_normal"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:background="@drawable/fasong"
       />
      <EditText
          android:id="@+id/message_detail_edit"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toLeftOf="@id/messsage_detail_send_button"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="11dip"
          android:background="@drawable/shurukuang"
          android:padding="5dip"
          android:gravity="center_vertical"
          android:textColor="@color/gray_727475"
          android:textSize="@dimen/font_size_small"
       />
    </RelativeLayout>
    <view
        xmlns:ptr="http://schemas.android.com/apk/res/com.zhubo.fm"
        android:id="@+id/message_detail_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class = "com.andy.ui.libray.pullrefreshview.PullToRefreshListView"
        android:listSelector="@color/transparent_background"
        android:fadingEdge="none"
        android:scrollbars="none"
        ptr:ptrMode="both"
        android:divider="@null"
        android:layout_above="@id/mssage_detail_top_layout"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dip"
    android:paddingBottom="15dip"
    android:paddingLeft="17dip"
    android:paddingRight="17dip"
    >
    <ImageView
        android:id="@+id/product_category_list_item_right_img"
        android:layout_width="9dip"
        android:layout_height="13.5dip"
        android:scaleType="centerInside"
        android:src="@drawable/right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/product_category_list_item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#313131"
        android:textSize="@dimen/font_size_medium"
        android:layout_toLeftOf="@id/product_category_list_item_right_img"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingRight="12dp"
        android:gravity="center_vertical"
        />
</RelativeLayout>
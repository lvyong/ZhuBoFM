<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dip"
    android:paddingLeft="15dip"
    android:paddingRight="15dip"
    >
    <view
        android:id="@+id/message_come_me_imageview"
        android:layout_width="45dip"
        android:layout_height="45dip"
        class="com.zhubo.control.activity.common.ItotemImageView"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:src="@drawable/default_img"
        />
    <RelativeLayout
        android:id="@+id/message_come_me_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/message_come_me_imageview"
        android:layout_toLeftOf="@id/message_come_me_imageview"
        android:layout_marginRight="11dip"
        >
        <TextView
            android:id="@+id/message_come_me_peopleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#959595"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            />
        <TextView
            android:id="@+id/message_come_me_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#c9c9c9"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/message_come_me_peopleName"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/message_come_me_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/message_come_me_top_layout"
        android:layout_toLeftOf="@id/message_come_me_imageview"
        android:background="@drawable/me_message_bg"
        android:layout_marginTop="9dip"
        android:layout_marginRight="15dip"
        android:textSize="@dimen/font_size_normal"
        android:textColor="#323232"
        android:paddingTop="5dip"
        android:paddingLeft="9dip"
        android:paddingBottom="5dip"
        android:paddingRight="11dip"
        android:text=""
        />
</RelativeLayout>
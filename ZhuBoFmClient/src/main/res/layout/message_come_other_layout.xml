<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    >
   <view
       android:id="@+id/message_come_other_imageview"
       android:layout_width="40dip"
       android:layout_height="40dip"
       class="com.zhubo.control.activity.common.ItotemImageView"
       android:scaleType="centerInside"
       android:layout_alignParentLeft="true"
     />
     <LinearLayout
       android:id="@+id/message_come_other_top_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignTop="@id/message_come_other_imageview"
       android:layout_toRightOf="@id/message_come_other_imageview"
       android:layout_marginLeft="17dip"
     >
        <TextView
            android:id="@+id/message_come_other_peopleName"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small"
            android:textColor="#adadad"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_weight="1"
         />
         <TextView
         android:id="@+id/message_come_other_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="@dimen/font_size_small_small"
         android:textColor="#c9c9c9"
         android:singleLine="true"
         android:ellipsize="end"
         android:layout_marginLeft="5dip"
         />
     </LinearLayout>
     <TextView
         android:id="@+id/message_come_other_textview"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_below="@id/message_come_other_top_layout"
         android:layout_toRightOf="@id/message_come_other_imageview"
         android:background="@drawable/other_message_bg"
         android:layout_marginTop="9dip"
         android:layout_marginLeft="11dip"
         android:textSize="@dimen/font_size_normal"
         android:textColor="#323232"
         android:text=""
      />
</RelativeLayout>
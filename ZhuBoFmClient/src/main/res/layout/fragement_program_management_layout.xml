<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/fragment_program_management_top_layout"
      android:layout_height="210dip"
      android:layout_width="match_parent"
      android:background="@drawable/main_top_bg"
    >
     <include
         android:id="@+id/fragement_program_management_top_linear"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         layout="@layout/fragement_program_manage_top_layout"
         android:layout_alignParentTop="true"
      />
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom ="12dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:layout_below="@id/fragement_program_management_top_linear"
        >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:paddingTop="11dip"
        android:paddingBottom="11dip"
        android:paddingLeft="23dip"
        android:paddingRight="11dip"
        android:orientation="vertical"
     >
       <TextView
           android:id="@+id/fragment_program_management_top_label_textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/font_size_normal"
           android:textColor="@color/white"
           android:ellipsize="marquee"
           android:singleLine="true"
           android:text=""
           android:drawablePadding="5dip"
           android:marqueeRepeatLimit="-1"
        />
         <TextView
             android:id="@+id/fragment_program_management_top_middle_textView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/font_size_medium"
             android:textColor="@color/white"
             android:ellipsize="end"
             android:singleLine="true"
             android:text=""
             android:layout_marginTop="12dip"
             android:drawablePadding="5dip"
             />
         <TextView
             android:id="@+id/fragment_program_management_top_bottom_textView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/font_size_normal"
             android:textColor="@color/white"
             android:ellipsize="end"
             android:singleLine="true"
             android:text=""
             android:layout_marginTop="16dip"
             />
         <LinearLayout
             android:id="@+id/fragement_program_management_bottom_linear"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:visibility="gone"
             android:layout_marginTop="12dip"
             >
             <Button
                 android:id="@+id/fragement_program_management_bottom_leftButton"
                 android:layout_width="100dip"
                 android:layout_height="40dip"
                 android:background="@drawable/button_bg"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_size_normal"
                 android:text="选产品"
                />
             <Button
                 android:id="@+id/fragement_program_management_bottom_rightButton"
                 android:layout_width="100dip"
                 android:layout_height="40dip"
                 android:background="@drawable/button_bg"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_size_normal"
                 android:text="传文稿"
                 android:layout_marginLeft="11dip"
                 />
         </LinearLayout>
       </LinearLayout>
     </RelativeLayout>
    </RelativeLayout>
    <view
        xmlns:ptr="http://schemas.android.com/apk/res/com.zhubo.fm"
        android:id="@+id/fragement_program_management_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class = "com.andy.ui.libray.pullrefreshview.PullToRefreshListView"
        android:listSelector="@color/transparent_background"
        android:fadingEdge="none"
        android:scrollbars="none"
        ptr:ptrMode="both"
    />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/fragment_program_management_top_layout"
      android:layout_height="145dip"
      android:layout_width="match_parent"
      android:background="@drawable/main_top_bg"
    >
     <view
         android:id="@+id/fragment_program_management_top_img"
         class="com.zhubo.control.activity.common.ItotemImageView"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scaleType="centerCrop"
     />
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom ="12dip"
        android:paddingTop ="12dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        android:paddingTop="12.5dip"
        android:paddingBottom="12dip"
        android:paddingLeft="21dip"
        android:paddingRight="10dip"
        android:orientation="vertical"
     >
       <TextView
           android:id="@+id/fragment_program_management_top_label_textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="@dimen/font_size_normal"
           android:textColor="@color/white"
           android:ellipsize="marquee"
           android:singleLine="true"
           android:text="正在直播"
           android:drawablePadding="5dip"
        />
         <TextView
             android:id="@+id/fragment_program_management_top_middle_textView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/font_size_medium"
             android:textColor="@color/white"
             android:ellipsize="end"
             android:singleLine="true"
             android:text=""
             android:layout_marginTop="7dip"
             android:drawablePadding="5dip"
             />
         <TextView
             android:id="@+id/fragment_program_management_top_bottom_textView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/font_size_small"
             android:textColor="@color/white"
             android:ellipsize="end"
             android:singleLine="true"
             android:text=""
             android:layout_marginTop="7dip"
             />
         <LinearLayout
             android:id="@+id/fragement_program_management_bottom_linear"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:visibility="gone"
             android:layout_marginTop="7dip"
             >
             <Button
                 android:id="@+id/fragement_program_management_bottom_leftButton"
                 android:layout_width="80dip"
                 android:layout_height="29dip"
                 android:background="@drawable/button_bg"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_size_normal"
                 android:text="选产品"
                />
             <Button
                 android:id="@+id/fragement_program_management_bottom_rightButton"
                 android:layout_width="80dip"
                 android:layout_height="29dip"
                 android:background="@drawable/button_bg"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_size_normal"
                 android:text="传文稿"
                 android:layout_marginLeft="11dip"
                 />
         </LinearLayout>
     </LinearLayout>
     </RelativeLayout>
    </RelativeLayout>
    <view
        xmlns:ptr="http://schemas.android.com/apk/res/com.zhubo.fm"
        android:id="@+id/fragement_program_management_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class = "com.andy.ui.libray.pullrefreshview.PullToRefreshListView"
        android:listSelector="@color/transparent_background"
        android:fadingEdge="none"
        android:scrollbars="none"
        ptr:ptrMode="both"
    />
</LinearLayout>
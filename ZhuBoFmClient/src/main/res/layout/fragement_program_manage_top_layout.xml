<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="8.5dip"
        android:paddingBottom="9dip"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/fragement_program_management_people_image"
            android:layout_width="34dip"
            android:layout_height="34dip"
            android:layout_marginRight="12dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="visible"
            />
       <ImageView
        android:id="@+id/fragement_program_management_settings_imageview"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/settings"
        android:scaleType="centerInside"
        android:visibility="visible"/>
        <TextView
              android:id="@+id/fragement_program_management_people_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/white"
              android:layout_toRightOf="@id/fragement_program_management_people_image"
              android:layout_toLeftOf="@id/fragement_program_management_settings_imageview"
              android:gravity="center_vertical"
              android:textSize="@dimen/font_size_large"
              android:paddingLeft="12dip"
              android:layout_centerVertical="true"
         />
  </RelativeLayout>
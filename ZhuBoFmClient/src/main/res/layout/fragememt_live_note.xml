<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/fragement_live_note_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        layout="@layout/fragement_live_program_note_layout"
        android:layout_alignParentTop="true"
     />
    <RelativeLayout
        android:id="@+id/fragement_live_note_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:visibility="gone"
        android:layout_below="@id/fragement_live_note_title_layout"
     >
       <ImageView
           android:id="@+id/fragement_live_note_right_img"
           android:layout_width="68dip"
           android:layout_height="92dip"
           android:scaleType="centerInside"
           android:src="@drawable/live_note_indicator"
           android:layout_alignParentRight="true"
           android:layout_marginRight="28dip"
        />
        <ImageView
            android:id="@+id/fragement_live_note_comment_img"
            android:layout_width="224dp"
            android:layout_height="62dip"
            android:scaleType="centerInside"
            android:src="@drawable/live_note_empty_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108.5dip"

        />
     </RelativeLayout>
     <TextView
         android:id="@+id/fragememnt_live_note_textview"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="12dip"
         android:background="@color/white"
         android:textSize="@dimen/font_size_normal"
         android:textColor="#333333"
         android:lineSpacingExtra="1.5dip"
         android:layout_marginTop="12dip"
         android:layout_below="@id/fragement_live_note_title_layout"
         android:visibility="visible"
         android:text=""
      />
</RelativeLayout>